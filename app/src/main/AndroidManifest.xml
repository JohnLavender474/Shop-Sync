<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShopSync"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Registration Activity -->
        <activity
            android:name=".ui.RegistrationActivity"
            android:parentActivityName=".ui.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uga.cs.shopsync.ui.MainActivity" />
        </activity>

        <!-- Sign-in Activity -->
        <activity
            android:name=".ui.SignInActivity"
            android:parentActivityName=".ui.MainActivity">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uga.cs.shopsync.ui.MainActivity" />
        </activity>

        <!-- My Shop Syncs Activity -->
        <activity
            android:name=".ui.MyShopSyncsActivity"
            android:parentActivityName=".ui.MyAccountActivity">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uga.cs.shopsync.ui.MainActivity" />
        </activity>

        <!-- My Account Activity -->
        <activity
            android:name=".ui.MyAccountActivity"
            android:parentActivityName=".ui.MainActivity">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uga.cs.shopsync.ui.MainActivity" />
        </activity>

        <!-- Change Password Activity -->
        <activity
            android:name=".ui.ChangePasswordActivity"
            android:parentActivityName=".ui.MyAccountActivity">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uga.cs.shopsync.ui.MyAccountActivity" />
        </activity>

    </application>

</manifest>