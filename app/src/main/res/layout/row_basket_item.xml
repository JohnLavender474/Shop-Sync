<!-- row_basket_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewQuantityWarning"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:text="@string/warning_quantity"
            android:textColor="@color/red"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="@string/quantity"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextQuantity"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:autofillHints=""
                android:hint="@string/quantity"
                android:inputType="number"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="@string/price_per_unit"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextPricePerUnit"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:autofillHints=""
                android:hint="@string/price_per_unit"
                android:inputType="numberDecimal"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewPriceWarning"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/warning_price"
            android:textColor="@color/red"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/update" />

        <Button
            android:id="@+id/buttonPurchase"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/purchase" />

        <Button
            android:id="@+id/buttonRemove"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/remove" />

    </LinearLayout>

</LinearLayout>
