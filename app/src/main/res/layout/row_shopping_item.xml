<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"> <!-- Reduced padding -->

    <TextView
        android:id="@+id/textViewError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/item_name_should_not_be_empty"
        android:textColor="@color/red"
        android:textSize="12sp" /> <!-- Smaller text size -->

    <EditText
        android:id="@+id/editTextItemName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/item_name"
        android:inputType="text"
        android:textSize="12sp" /> <!-- Smaller text size, removed margins -->

    <!-- Removed margins, use padding if necessary -->
    <TextView
        android:id="@+id/textViewInBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inBasket"
        android:gravity="center_horizontal"
        android:textSize="12sp" /> <!-- Smaller text size -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"> <!-- Reduced top margin -->

        <Button
            android:id="@+id/buttonSetInBasket"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/set_in_my_basket"
            android:textColor="@color/green" />

        <Button
            android:id="@+id/buttonDeleteItem"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/delete"
            android:textColor="@color/red" />
    </LinearLayout>
</LinearLayout>
