<!-- fragment_shopping_items.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frontend.activities.ShopSyncActivity">

    <Button
        android:id="@+id/buttonAddShoppingItem"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/add"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewShoppingItems"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- RecyclerView for shopping items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewShoppingItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonAddShoppingItem" />

</androidx.constraintlayout.widget.ConstraintLayout>
