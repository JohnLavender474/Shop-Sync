<!-- shop_sync_activity.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- RadioGroup to contain the RadioButtons -->
    <RadioGroup
        android:id="@+id/radioGroupItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <!-- RadioButton for Shopping Items -->
        <RadioButton
            android:id="@+id/radioButtonShoppingItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shopping_items"
            android:checked="true"/>

        <!-- RadioButton for Purchased Items -->
        <RadioButton
            android:id="@+id/radioButtonPurchasedItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/purchased_items"/>
    </RadioGroup>

    <!-- FrameLayout to host fragments -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/radioGroupItems"
        android:layout_marginTop="8dp"/>

    <!-- Placeholder for stats table -->
    <!-- Add your specific UI components for stats here -->

</RelativeLayout>